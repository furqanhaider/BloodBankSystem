@model List<BloodBankSystem.Models.Request>
@{
    ViewBag.Title = "Requests";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h2>Requests</h2>

@if (ViewBag.ChangeRequestStatus != null)
{
    <p class="msg done">@ViewBag.ChangeRequestStatus</p>
}

@if (Model.Count > 0)
{
    <table>
        <tr>
            <th>No.</th>
            <th>Request ID</th>
            <th>Bloodgroup</th>
            <th>Recepient</th>
            <th>Quantity(Bags)</th>
            <th>Status</th>
            <th>Location</th>
            <th>Accept</th>
            <th>Reject</th>
        </tr>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td>@Model[i].requestID</td>
                <td>@Model[i].reqBloodGroup</td>
                <td>@Model[i].Recepient.name</td>
                <td>@Model[i].reqQuantity</td>
                <td>@(Model[i].reqStatus == 1 ? new HtmlString("<font color='orange'>Pending</font>") : new HtmlString( "<font color='red'>Rejected</font>") )</td>
                <td>@Model[i].location</td>
                <td><a href="/Manager/AcceptRequest/@Model[i].requestID">Accept</a></td>
                <td><a href="/Manager/RejectRequest/@Model[i].requestID">Reject</a></td>
            </tr>
        }

    </table>
}
else
{
    <p class="msg info">No Requests Found...</p>
}

