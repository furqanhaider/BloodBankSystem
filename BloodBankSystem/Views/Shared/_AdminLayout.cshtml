<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" media="screen,projection" type="text/css" href="~/Content/reset.css" />
    <link rel="stylesheet" media="screen,projection" type="text/css" href="~/Content/main.css" />
    <link rel="stylesheet" media="screen,projection" type="text/css" href="~/Content/2col.css" title="2col" />
    <link rel="alternate stylesheet" media="screen,projection" type="text/css" href="~/Content/1col.css" title="1col" />
    <!--[if lte IE 6]><link rel="stylesheet" media="screen,projection" type="text/css" href="~/Content/main-ie6.css" /><![endif]-->
    <link rel="stylesheet" media="screen,projection" type="text/css" href="~/Content/style.css" />
    <link rel="stylesheet" media="screen,projection" type="text/css" href="~/Content/mystyle.css" />
    <script type="text/javascript" src="~/Scripts/jquery.js"></script>
    <script type="text/javascript" src="~/Scripts/switcher.js"></script>
    <script type="text/javascript" src="~/Scripts/toggle.js"></script>
    <script type="text/javascript" src="~/Scripts/ui.core.js"></script>
    <script type="text/javascript" src="~/Scripts/ui.tabs.js"></script>
    <script type="text/javascript" src="~/Scripts/variables.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".tabs > ul").tabs();
        });
    </script>
    @RenderSection("scripts", required: false)
</head>
<body>
    <div id="main">
        <!-- Tray -->
        <div id="tray" class="box">
            <p class="f-left box">
                <!-- Switcher -->
                <span class="f-left" id="switcher"><a href="javascript:void(0);" rel="1col" class="styleswitch ico-col1" title="Display one column">
                    <img src="../../design/switcher-1col.gif" alt="1 Column" /></a> <a href="javascript:void(0)" rel="2col" class="styleswitch ico-col2" title="Display two columns">
                        <img src="../../design/switcher-2col.gif" alt="" /></a> </span><strong>Hide Side Bar</strong>
            </p>
            <p class="f-right"><strong>@ViewBag.userName</strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <strong>@Html.ActionLink("Logout", "Logout", "Admin")</strong></p>
        </div>
        <!--  /tray -->
        <hr class="noscreen" />
        <!-- Menu -->
        <div id="menu" class="box">
            <ul class="box">
                <li id="menu-active"><a href="/Admin"><span>Home</span></a></li>
            </ul>
        </div>
        <!-- /header -->
        <hr class="noscreen" />
        <!-- Columns -->
        <div id="cols" class="box">
            <!-- Aside (Left Column) -->
            <div id="aside" class="box">
                <!-- /padding -->
                <ul class="box">
                    <li id="submenu-active">@Html.ActionLink("Branches Related", "Index", "Admin")
                        <!-- Active -->
                        <ul>
                            <li>@Html.ActionLink("View Branches", "ViewBranches", "Admin")</li>
                            <li>@Html.ActionLink("Add new Branch", "AddBranch", "Admin")</li>
                            <!--<li>@Html.ActionLink("Assign Manager to Branch", "AssignManager", "Admin")</li>-->
                            <!--<li>@Html.ActionLink("Remove Manager", "RemoveManager", "Admin")</li>-->
                        </ul>
                    </li>
                    <br/>
                    <li id="submenu-active"><a href="">@ViewBag.userName</a>
                        <!-- Active -->
                        <ul>
                            <li>@Html.ActionLink("Change Password", "ChangePassword", "Admin")</li>
                            <li>@Html.ActionLink("Logout", "Logout", "Admin")</li>
                        </ul>
                    </li>
                </ul>
            </div>

            <!-- /aside -->
            <hr class="noscreen" />
            <!-- Content (Right Column) -->
            <div id="content" class="box">
                <h1>Styles</h1>
                <!-- Headings -->
                
                @RenderBody()

            </div>
            <!-- /content -->
        </div>
        <!-- /cols -->
        <hr class="noscreen" />
        <!-- Footer -->
        <div id="footer" class="box">
            <p class="f-left">&copy; 2009 <a href="http://www.free-css.com/">Your Company</a>, All Rights Reserved &reg;</p>
            <p class="f-right">Templates by <a href="http://www.adminizio.com/">Adminizio</a></p>
        </div>
        <!-- /footer -->
    </div>
    <!-- /main -->
</body>
</html>
